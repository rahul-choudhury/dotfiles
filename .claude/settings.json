{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(bun run lint)",
      "Bash(bun run typecheck)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run typecheck)",
      "Bash(git show:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(gh pr view:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "WebFetch(domain:base-ui.com)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env*.local)"
    ]
  }
}
